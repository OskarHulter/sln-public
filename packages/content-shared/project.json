{
  "name": "content-shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/content-shared/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/content-shared",
        "tsConfig": "packages/content-shared/tsconfig.lib.json",
        "packageJson": "packages/content-shared/package.json",
        "main": "packages/content-shared/src/index.ts",
        "assets": [
          "packages/content-shared/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/content-shared/**/*.ts"
        ]
      }
    }
  },
  "tags": [
    "scope:shared",
    "type:content"
  ]
}
