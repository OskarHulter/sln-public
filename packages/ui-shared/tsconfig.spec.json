{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "vitest/globals",
      "node",
      "vitest",
      "@testing-library/react",
      "@testing-library/jest-dom",
      "@testing-library/user-event"
    ],
    "noEmit": false,
    "composite": true
  },
  "include": [
    "test/*",
    "vite.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ]
}
