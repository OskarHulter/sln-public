{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@sln/content-shared": [
        "packages/content/shared/src/index.ts"
      ],
      "@sln/data-access-shared": [
        "packages/data-access/shared/src/index.ts"
      ],
      "@sln/domain-shared": [
        "packages/domain/shared/src/index.ts"
      ],
      "@sln/features-mail": [
        "packages/features/mail/src/index.ts"
      ],
      "@sln/ui-shared": [
        "packages/ui-shared/src/index.ts"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "explainFiles": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "traceResolution": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "types": [
    "node",
    "immer",
    "zustand",
    "zod",
    "@tanstack/react-query",
    "@stitches/react",
    "http-errors",
    "ky",
    "superjson",
    "next-themes",
    "next",
    "ts-invariant",
    "@nextui-org/react",
    "@hookform/resolvers/zod",
    "vite/client",
    "vitest/globals",
    "@testing-library/react",
    "@testing-library/jest-dom",
    "@testing-library/user-event",
    "@trpc/client",
    "@trpc/server",
    "@trpc/react-query",
    "@trpc/next",
    "vite/client",
    "vitest",
    "react-email"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
